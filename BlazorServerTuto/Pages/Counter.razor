@page "/counter"
@page "/counter/{value:int}"

<h1>Counter</h1>

<p>The current count is @currentCount.</p>

<button class="btn btn-primary" @onclick="IncrementCount">[Click]</button>

@code{
    private int currentCount = 0;

    [Parameter]
    public int Value { get => currentCount; set => currentCount = value; }

    private void IncrementCount()
    {
        currentCount++;
    }
}